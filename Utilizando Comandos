
 -- UTILIZANDO CASE 
 
 -- ESTRUTUARA BÁSICA DO CASE
 
 -- WHEN = quando deeterminado valor =;
 -- THE =  o resulado retornará =
 -- ELSE 'ou fora isso, valor sera retornado =
 
 
 SELECT CODCLI
 CASE 
 WHEN DTCADASTRO <= '01/01/2015' AND DTEXCLUSAO = NULL THEN 'CLIENTE ANTIGO'
 WHEN DTCADASTRO >= '01/01/2020' AND DTEXCLUSAO = NULL THEN 'CLIENTE NOVO'
 WHEN DTCADASTRO NOT NULL DTEXCLUSAO = NOT NULL THEN 'CLIENTE DEMITIDO'
 END AS CLIENT_STATUS
 FROM PCCLIENT WHERE CODFILIALNF = 44;
 
-- RENOMEANDO COM A CLAUSULA RENAME 

ALTER TABLE PEDIDOS RENAME TO PEDIDOS_ID1 ;
