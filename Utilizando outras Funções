


SELECT  MOTIVO, BLOQUEIO,PCUSUARI. * FROM PCUSUARI WHERE CODUSUR = 8792;
-- FUNCOES 
SELECT DISTINCT(CODPROD),  LENGTH(P.QTEST)AS QUANTIDADE, P. * FROM PCEST P  WHERE CODFILIAL = 44;

-- TRABALHANDO COM STRING
-- TRABALHANDO COM FUNCOES STRING 
-- COM  O COMANDO || CONSEGUIMOS  UTILIZAR PARA CONCATENAR OS VALORES QUE DESEJAMOS EXIBIR JUNTO COM UM COMENTARIO
SELECT (' O PRODUTO' || CODPROD ||' PERTENCE A FILIAL '|| CODFILIAL|| ' COM QUANTIDADE '|| CODPROD ) FROM   PCPRODFILIAL;  

-- OPERAÇÕES COM DATE DD/MM/YYYY
-- OBS: NO SQL DEVELOPER N FUNCIONA 
SELECT CLIENTE, STRFTIME('%DD/%MM', DTEMISSAO)  FROM PCCLIENT ;


-- PARA CALCULAR A DIFERENÇA DE DIAS DE UMA TADA E OUTRA UTILIZAMOS O COMANDO JULIANDAY, ONDE ELE CONSEGUE REALIZAR OS CALCULOS
SELECT NOME, JULIANDAY(DTCADASTRO)- JULIANDAY (DTEXCLUSAO) FROM PCCLIENT WHERE DTEXCLUSAO IS NOT NULL;
--  PARA REALIZAR UM CALCULO ENTRE OS DIA DE PUBLICAÇÃO E O DIA ATUAL, UTILIZAMOS A SEGUINTE OPERAÇÀO
SELECT  NOME, JULIANDAY('NOW')- JULIANDAY('2024-04-01');

-- FUNÇÕES NÚMERICAS  ROUND,CEIL FLOOR 

--  UTILIZAMOS AVG PARA TRAZER A MEDIA DO VALOR  DA COLUNA QUE FOI REFERENCIADA PELA TABELA
-- LOGO EM SEGUIDA UTILIZAMOS O ROUND( VLTOTAL),2) WHERE REGIAO = 'RECIFE' AND DATA BETWEEN '01/05/2024' AND '14/05/2024';
-- RESULTADOS  VALOR NORMAL 437,928660646387832699619771863117870722	          VALOR COM AS CASAS DECIMAIS 437,93

SELECT  AVG(VLTOTAL), ROUND ( AVG( VLTOTAL),3) FROM PCPEDC WHERE CODFILIAL = 44 AND DATA BETWEEN '01/05/2024' AND '14/05/2024';

-- PARA TRAZER UM VALOR ARREDONDADO,SEMPRE UM VALOR MAIO QUE O ULTIMO NUMERAL 
SELECT CEIL(VLTOTAL),P.*FROM PCPEDC P WHERE CODFILIAL = 44 AND DATA BETWEEN '01/05/2024' AND '14/05/2024';
-- PARA TRAZER O VALOR MENOS, SEMPRE DO ULTIMO NUMERAL
SELECT FLOOR(VLTOTAL),P.*FROM PCPEDC P WHERE CODFILIAL = 44 AND DATA BETWEEN '01/05/2024' AND '14/05/2024';



--  PARA CONVERTER O VALOR DO RESULTADO

SELECT ('O VALOR TOTAL APURADO NO MES DE JANEIRO DE 2022 FOI '|| (ROUND (AVG(VLTOTAL),2) )) FROM PCPEDC WHERE CODFILIAL = 44 AND DATA BETWEEN '01/01/2022' AND '31/01/2022' AND POSICAO = 'F';
